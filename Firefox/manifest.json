{
    "manifest_version": 2,
    "name": "Ahoy!",
    "description": "Acede a todos os sites bloqueados em Portugal. Uma experiencia de internet livre e sem qualquer tipo de bloqueios.",
    "version": "2.1.0",
    "icons": {
        "16": "icons/color/16x16.png",
        "48": "icons/color/48x48.png",
        "128": "icons/color/128x128.png"
    },
    "applications": {
        "gecko": {
            "strict_min_version": "60.0"
        }
    },
    "background": { 
        "scripts": [
            "ahoy.js",
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": {
            "19": "icons/gray/19x19.png",
            "38": "icons/gray/38x38.png"
        },
        "default_title": "Ahoy!",
        "default_popup": "views/popup.html"
    },
    "permissions": [
        "alarms",
        "proxy",
        "storage",
        "tabs",
        "webRequest",
        "webNavigation",
        "webRequestBlocking",
        "*://*/"
    ]
}